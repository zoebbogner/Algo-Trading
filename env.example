# Environment Configuration for Crypto Historical Data Collection System
# Copy this file to .env and modify as needed

# System Mode
MODE=SIM

# Data and Cache Directories
DATA_CACHE_DIR=data/cache
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
DATA_FEATURES_DIR=data/features

# Reports and Logs
REPORTS_DIR=reports
LOGS_DIR=logs

# Timezone Settings
TZ=Asia/Jerusalem

# Binance API Settings (Public endpoints only - no keys needed for historical data)
BINANCE_BASE_URL=https://api.binance.com
BINANCE_DATA_DUMP_URL=https://data.binance.vision

# Data Collection Settings
CSV_DOWNLOAD_PARALLEL=3
REST_RATE_LIMIT_MS=100
REST_BATCH_SIZE=1000

# Processing Settings
BATCH_SIZE=10000
MAX_WORKERS=4
CACHE_TTL_HOURS=24

# Quality Control
MIN_COVERAGE_PCT=99.9
MAX_GAP_MINUTES=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# LLM Model Paths (for future use)
LLM_INSTRUCT_MODEL_PATH=/Users/zoe/Library/Application Support/nomic.ai/GPT4All/Meta-Llama-3-8B-Instruct.Q4_0.gguf
EMBEDDINGS_MODEL_PATH=/Applications/gpt4all/bin/gpt4all.app/Contents/Resources/nomic-embed-text-v1.5.f16.gguf

# Development Settings
DEBUG=false
DRY_RUN=false
